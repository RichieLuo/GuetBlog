@{
    Layout = "_Layout";
    ViewData["Title"] = "修改密码";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <ul class="nav nav-tabs page-tabs">
                <li class="active"><a href="#!">修改密码</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active">
                    <form method="post" name="SaveForm" action="#!" class="site-form">
                        <div class="form-group">
                            <label for="OldPassword">旧密码</label>
                            <input type="password" class="form-control" name="Password" id="Password" placeholder="输入账号的原登录密码">
                        </div>
                        <div class="form-group">
                            <label for="NewPassword">新密码</label>
                            <input type="password" class="form-control" name="NewPassword" id="NewPassword" placeholder="输入新的密码">
                        </div>
                        <div class="form-group">
                            <label for="ConfirmNewPassword">确认新密码</label>
                            <input type="password" class="form-control" name="ConfirmNewPassword" id="ConfirmNewPassword" placeholder="请再次确认新的密码">
                        </div>
                        <button type="button" class="btn btn-primary" id="Save">修改密码</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        window.onload = function () {
            $("#Save").off("click").on("click", function () {
                var _loginData = $("form[name=SaveForm]").serializeJson();
                $.ajax({
                    url: "/Account/ChangePassword",
                    type: "post",
                    data: _loginData,
                    dataType: "json",
                    success: function (res) {
                        alert(res.msg);
                    },
                    fail: function () {
                        alert(res.msg);
                    }
                })
            });
        }
    </script>
}
