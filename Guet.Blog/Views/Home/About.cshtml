@{
    Layout = "_LayoutIndex";
    ViewData["Title"] = "关于我";
}
@using Guet.ViewModels.Site;
@model AboutVM;
<div class="container">
    <div class="layui-row">
        <div class="layui-col-md9 bg-white" style="padding:20px;box-sizing:border-box;position:relative;min-height:600px">
            <h4 style="font-weight:700;width:80px; padding-bottom: 10px; text-align:center;margin-bottom:20px; border-bottom: 2px solid var(--theme-color-dark);">关于我</h4>
            <div>
                <div id="BlogEditorContent">
                    @Html.Raw(Model.Content)
                </div>
            </div>
        </div>
        <div class="layui-col-md3">
            <div class="article-right-content">
                @await Component.InvokeAsync("LabelsVC");
            </div>
        </div>
    </div>
</div>
